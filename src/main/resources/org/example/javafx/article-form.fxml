<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.control.TextField?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafx.controller.ArticleForm">
    <children>
        <VBox prefHeight="400.0" prefWidth="600.0">
            <children>
                <Label text="Title" />
                <TextField fx:id="txtTitle" />
                <Label layoutX="10.0" layoutY="10.0" text="Description" />
                <TextField fx:id="txtDescription" layoutX="10.0" layoutY="28.0" prefHeight="66.0" prefWidth="600.0" />
                <Label layoutX="10.0" layoutY="53.0" text="Content" />
                <TextField fx:id="txtContent" layoutX="10.0" layoutY="71.0" prefHeight="132.0" prefWidth="600.0" />
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#processSave" text="Save" />
                        <Button mnemonicParsing="false" onAction="#processReset" text="Reset" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
